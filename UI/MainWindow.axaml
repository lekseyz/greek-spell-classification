<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:UI.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="900" d:DesignHeight="600"
        x:Class="UI.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Title="Greek Symbol Recognizer (ML.NET vs Custom)"
        Background="#181818"
        TransparencyLevelHint="AcrylicBlur">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="*, Auto">
        
        <Grid ColumnDefinitions="*, 300" Grid.Row="0" Margin="5">
            
            <Border Grid.Column="0" 
                    Classes="card">
                
               <Grid>
                    <Image Source="{Binding CameraFeed}" 
                           Stretch="Uniform"
                           IsVisible="{Binding !IsDrawingMode}"/>

                    <Viewbox Stretch="Uniform" IsVisible="{Binding IsDrawingMode}">
                        <Grid Width="28" Height="28" Background="Black"
                              Name="DrawingGrid"
                              PointerPressed="OnPointerPressed"
                              PointerMoved="OnPointerMoved"
                              PointerReleased="OnPointerReleased">
                            
                            <Image x:Name="DrawingImage"
                                   Source="{Binding DrawingBitmap}" 
                                   Stretch="None"
                                   RenderOptions.BitmapInterpolationMode="None"/>
                        </Grid>
                    </Viewbox>
                    
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="10" Spacing="5">
    
                        <Button Command="{Binding ToggleSourceCommand}" HorizontalAlignment="Left">
                            <Panel>
                                <TextBlock Text="Включить камеру" IsVisible="{Binding IsDrawingMode}"/>
                                <TextBlock Text="Включить рисование" IsVisible="{Binding !IsDrawingMode}"/>
                            </Panel>
                        </Button>
    
                        <Button Content="Очистить" 
                                Command="{Binding ClearDrawingCommand}"
                                IsVisible="{Binding IsDrawingMode}"
                                Background="#C42B1C" Foreground="White"/>

                        <Button Content="Распознать фото" 
                                Command="{Binding ClassifyCameraCommand}"
                                IsVisible="{Binding !IsDrawingMode}" 
                                Background="#007ACC" Foreground="White"/>

                    </StackPanel>
                </Grid>
                
                </Border>

            <Border Grid.Column="1" 
                    Classes="card">
                <ScrollViewer>
                    <StackPanel Spacing="15">
                    <TextBlock Text="Настройки ML" Classes="text-primary"/>
                    <Separator Background="#3E3E42" Height="1"/>

                    <Button Content="Сгенерировать датасет"
                            Command="{Binding GenerateDatasetCommand}"
                            HorizontalAlignment="Stretch"
                            HorizontalContentAlignment="Center"
                            Margin="0, 5, 0, 0"
                            Classes="Primary"/>
                    
                    <TextBlock Text="Выбор нейросети:" Classes="text-secondary"/>
                    <ComboBox SelectedIndex="{Binding SelectedModelIndex}" HorizontalAlignment="Stretch">
                        <ComboBoxItem>Самописная (MLP)</ComboBoxItem>
                        <ComboBoxItem>Библиотечная (ML.NET)</ComboBoxItem>
                    </ComboBox>

                    <Separator Background="#3E3E42" Height="1"/>

                    <StackPanel Spacing="5">
                        <TextBlock Text="Распознано:" Classes="text-secondary"/>
                        <Border Background="#1E1E1E" CornerRadius="5" Padding="10">
                            <TextBlock Text="{Binding PredictionResult}" 
                                       FontSize="30" 
                                       FontWeight="Bold" 
                                       Foreground="#D8CEBD" 
                                       HorizontalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Spacing="5">
                         <TextBlock Text="Уверенность:" Classes="text-secondary"/>
                         <ProgressBar Value="{Binding Confidence}" Maximum="100" Height="10" Foreground="#4CC2FF"/>
                         <TextBlock Text="{Binding Confidence, StringFormat={}{0:F1}%}" HorizontalAlignment="Right" Foreground="Gray" FontSize="12"/>
                    </StackPanel>

                    <Separator Background="#3E3E42" Height="1" Margin="0,10"/>
                    
                    <StackPanel Spacing="5">
                        <TextBlock Text="Сбор данных:" Classes="text-secondary"/>
                        <TextBox Watermark="Правильный символ (напр. Alpha)" />
                        <Button Content="Сохранить образ" 
                                Command="{Binding CaptureCommand}"
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center"/>
                        <Button Content="Переобучить сеть" 
                                Command="{Binding TrainNetworkCommand}"  
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center"/>
                        
                        <Button Content="Тестировать сеть"
                                Command="{Binding TestNetworkCommand}" 
                                HorizontalAlignment="Stretch" 
                                HorizontalContentAlignment="Center"
                                Margin="0, 5, 0, 0"/>
                    </StackPanel>
                    
                    <Separator Background="#3E3E42" Height="1" Margin="0,10"/>
                    
                    <StackPanel Spacing="8" 
                        Classes="conditional-box" 
                        IsEnabled="{Binding IsMlpSettingsEnabled}">

                        <TextBlock Text="Настройки MLP" 
                                   Classes="text-primary" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,5"/>
                        
                        <TextBlock Text="Количество эпох:" Classes="text-secondary"/>
                        <NumericUpDown Value="{Binding Epochs}" 
                                       Minimum="1" Maximum="10000" Increment="10"/>
                        
                        <TextBlock Text="Размер выборки (на класс):" Classes="text-secondary"/>
                        <NumericUpDown Value="{Binding TrainingSampleSize}" 
                                       Minimum="1" Maximum="5000" Increment="1"/>
                        
                        <TextBlock Text="Скорость обучения (LR):" Classes="text-secondary"/>
                        <NumericUpDown Value="{Binding LearningRateUi}" 
                                       Minimum="0.0001" Maximum="1.0" Increment="0.001"
                                       FormatString="0.0000"/>
                        
                        <TextBlock Text="Допустимая ошибка:" Classes="text-secondary"/>
                        <NumericUpDown Value="{Binding AcceptableErrorUi}" 
                                       Minimum="0.0" Maximum="1.0" Increment="0.01"
                                       FormatString="P0"/>
                        
                        <Separator Background="#3E3E42" Height="1" Margin="0,10"/>
                        <TextBlock Text="Архитектура слоев:" Classes="text-primary" FontWeight="Bold"/>
                        
                        <ItemsControl ItemsSource="{Binding EditableHiddenLayers}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid ColumnDefinitions="*, Auto" Margin="0,0,0,5">
                                        <TextBlock Text="Нейронов в слое:" 
                                                   VerticalAlignment="Center" 
                                                   FontSize="12" Foreground="Gray"/>
                                        
                                        <NumericUpDown Grid.Column="1" 
                                                       Value="{Binding Neurons}" 
                                                       Minimum="1" Maximum="2048" Increment="16"
                                                       Width="110"/>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                        
                        <Grid ColumnDefinitions="*, 5, *">
                            <Button Grid.Column="0" 
                                    Content="+ Слой" 
                                    Command="{Binding AddLayerCommand}"
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                            
                            <Button Grid.Column="2" 
                                    Content="- Слой" 
                                    Command="{Binding RemoveLayerCommand}"
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                        </Grid>
                        
                        <Separator Background="#3E3E42" Height="1" Margin="0,10"/>

                        <Grid ColumnDefinitions="*, 5, *">
                            <Button Grid.Column="0"
                                    Content="Сохранить"
                                    Command="{Binding SaveNetworkCommand}"
                                    Classes="Secondary"
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>

                            <Button Grid.Column="2"
                                    Content="Загрузить"
                                    Command="{Binding LoadNetworkCommand}"
                                    Classes="Secondary"
                                    HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"/>
                        </Grid>
                    </StackPanel>

                </StackPanel>
                </ScrollViewer>
                
                
            </Border>
        </Grid>

        <Border Grid.Row="1" Background="#007ACC" Padding="5">
            <TextBlock Text="{Binding StatusInfo}" Foreground="White" FontSize="12" Margin="5,0"/>
        </Border>

    </Grid>
</Window>